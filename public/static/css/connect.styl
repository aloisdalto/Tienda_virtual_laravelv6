body
    margin 0px
    padding 0px
    background-color #f6f6f6
    font-size 16px

.box
    position absolute
    background-color #fff
    border 1px solid #d6d6d6
    border-radius 8px
    min-width 500px
    padding 16px

    .inside
        padding 16px
    
    .container-inputs
        display flex
        align-items center
        gap 40px

    .linea
        height: 230px
        border 1px solid #dcd9d9
        border-radius .5px

    .header
        padding 20px 16px
        a
            img 
                display block
                width 45%
                margin 0px auto
    .footer
        text-align center
        a   
            display inline-block
            font-size .9em
            text-decoration none
            color #0f4c81
            &:hover
                color #598dbb
            &:last-child
                margin-left 24px

    .btn-success
        width 100%
        background-color #75afe2
        border 0px

    .form-control
        &:focus
        &:active
            outline none
            box-shadow none

.box-login
    top  50%
    left 50%
    transform translate(-50%,-50%)

.box-register
    top 50%
    left 50%
    transform translate(-50%,-50%)

